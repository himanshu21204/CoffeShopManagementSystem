@model BillModel;

<div class="card">
    <div class="card-body">
        <h5 class="card-title align-top fs-3">Bill</h5>

        <!-- Horizontal Form -->
        <form asp-action="BillSave" method="post">
            <input type="hidden" asp-for="BillID"/>
            <div class="row mb-3">
                <label asp-for="BillNumber" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Bill Number</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="BillNumber" class="form-control" id="inputText">
                <span asp-validation-for="BillNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="billDate" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Bill Date</label>
                <div class="col-sm-10">
                    <input type="datetime" asp-for="BillDate" class="form-control" id="inputText">
                <span asp-validation-for="BillDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Order ID</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderNumber"))">
                        <option value="">Select User</option>
                    </select>
                <span asp-validation-for="OrderID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="bill_Total_Amount" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Total Amount</label>
                <div class="col-sm-10">
                    <input type="number" asp-for="TotalAmount" class="form-control" id="inputText">
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="bill_Discount" class="col-sm-2 col-form-label">Discount</label>
                <div class="col-sm-10">
                    <input type="number" asp-for="Discount" class="form-control" id="inputText">
                <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="bill_Net_Amount" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Net Amount</label>
                <div class="col-sm-10">
                    <input type="number" asp-for="NetAmount" class="form-control" id="inputText">
                <span asp-validation-for="NetAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>User ID</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                        <option value="">Select User</option>
                    </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 text-start">
                    @{
                        var isEdit = !string.IsNullOrEmpty(Context?.Request?.Query["BillID"]);
                        var isAdd = !isEdit;
                    }
                    @if (isAdd)
                    {
                        <button type="submit" class="btn btn-primary">Add</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">Save</button>
                    }
                    <a asp-controller="Bill" asp-action="BillList" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form><!-- End Horizontal Form -->
    </div>
</div>