@model CustomerModel;

<div class="card">
    <div class="card-body">
        <h5 class="card-title align-top fs-3">Customer</h5>

        <!-- Horizontal Form -->
        <form asp-action="CustomerSave" method="post">
            <input type="hidden" asp-for="CustomerID"/>
            <div class="row mb-3">
                <label for="customer_Name" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Customer Name</label>
                <div class="col-sm-10">
                    <input asp-for="CustomerName" class="form-control">
                <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="home_Addresh" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Home Address</label>
                <div class="col-sm-10">
                    <input asp-for="HomeAddress" class="form-control">
                <span asp-validation-for="HomeAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="email" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Email</label>
                <div class="col-sm-10">
                    <input type="email" asp-for="Email" class="form-control" id="inputText">
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="mobileNo" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Mobile No.</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="MobileNo" class="form-control" id="inputText">
                <span asp-validation-for="MobileNo" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="gstNo" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>GST No.</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="GST_NO" class="form-control" id="inputText">
                    <span asp-validation-for="GST_NO" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="city_Name" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>City Name</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="CityName" class="form-control" id="inputText">
                <span asp-validation-for="CityName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PinCode" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Pin Code</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="PinCode" class="form-control" id="inputText">
                <span asp-validation-for="PinCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="net_Amount" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Net Amount</label>
                <div class="col-sm-10">
                    <input type="number" asp-for="NetAmount" class="form-control" id="inputText">
                <span asp-validation-for="NetAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>User ID</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                        <option value="">Select User</option>
                    </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 text-start">
                    @{
                        var isEdit = !string.IsNullOrEmpty(Context.Request.Query["CustomerID"]);
                        var isAdd = !isEdit;
                    }
                    @if (isAdd)
                    {
                        <button type="submit" class="btn btn-primary">Add</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">Save</button>
                    }
                    <a asp-controller="Customer" asp-action="CustomerList" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form><!-- End Horizontal Form -->
    </div>
</div>