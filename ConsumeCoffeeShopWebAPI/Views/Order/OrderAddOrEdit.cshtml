@model OrderModel;

<div class="card">
    <div class="card-body">
        <h5 class="card-title align-top fs-3">Order</h5>
        <!-- Horizontal Form -->
        <form asp-action="OrderSave" method="post">
            <input type="hidden" asp-for="OrderID"/>
            <div class="row mb-3">
                <label for="OrderDate" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Order Date</label>
                <div class="col-sm-10">
                    <input type="datetime" asp-for="OrderDate" class="form-control" id="inputText">
                <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Customer ID</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="CustomerID" asp-items="@(new SelectList(ViewBag.CustomerList, "CustomerID", "CustomerName"))">
                        <option value="">Select User</option>
                    </select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="OrderNumber" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Order Number</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="OrderNumber" class="form-control" id="inputText">
                    <span asp-validation-for="OrderNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PaymentMode" class="col-sm-2 col-form-label">PaymentMode</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="PaymentMode" class="form-control" id="inputText">
                <span asp-validation-for="PaymentMode" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="TotalAmount" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Total Amount</label>
                <div class="col-sm-10">
                    <input type="number" asp-for="TotalAmount" class="form-control" id="inputText">
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="ShippingAddress" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Shipping Address</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="ShippingAddress" class="form-control" id="inputText">
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>User ID</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 text-start">
                    @{
                        var isEdit = !string.IsNullOrEmpty(Context.Request.Query["OrderID"]);
                        var isAdd = !isEdit;
                    }
                    @if (isAdd)
                    {
                        <button type="submit" class="btn btn-primary">Add</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">Save</button>
                    }
                    <a asp-controller="Order" asp-action="OrderList" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form><!-- End Horizontal Form -->
    </div>
</div>