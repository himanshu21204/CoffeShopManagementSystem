@model OrderDetailModel;

<div class="card">
	<div class="card-body">
		<h5 class="card-title align-top fs-3">Order Detail</h5>
		@if (ViewData["ApiErrors"] != null)
		{
			var apiErrors = ViewData["ApiErrors"] as Dictionary<string, List<string>>;
			foreach (var error in apiErrors)
			{
				<div class="alert alert-danger">
					<strong>@error.Key:</strong>
					<ul>
						@foreach (var message in error.Value)
						{
							<li>@message</li>
						}
					</ul>
				</div>
			}
		}
		<!-- Horizontal Form -->
		<form asp-action="OrderDetailSave" method="post">
			<input type="hidden" asp-for="OrderDetailID" />
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Order ID</label>
				<div class="col-sm-10">

					<select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderNumber"))">
						<option value="">Select User</option>
					</select>
					<span asp-validation-for="OrderID" class="text-danger"></span>
				</div>

			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Product ID</label>
				<div class="col-sm-10">

					<select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.ProductList, "ProductID", "ProductName"))">
						<option value="">Select Product</option>
					</select>
					<span asp-validation-for="ProductID" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="Email" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Quantity</label>
				<div class="col-sm-10">
					<input type="number" asp-for="Quantity" class="form-control" id="inputText">
					<span asp-validation-for="Quantity" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="Password" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Amount</label>
				<div class="col-sm-10">
					<input type="number" asp-for="Amount" class="form-control" id="inputText">
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="MobileNo" class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>Total Amount</label>
				<div class="col-sm-10">
					<input type="number" asp-for="TotalAmount" class="form-control" id="inputText">
					<span asp-validation-for="TotalAmount" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label"><span class="text-danger align-top">*</span>User ID</label>
				<div class="col-sm-10">
					<select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
						<option value="">Select User</option>
					</select>
					<span asp-validation-for="UserID" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-sm-2"></div>
				<div class="col-sm-10 text-start">
					<button type="submit" class="btn btn-primary">@ViewBag.AddOrEdit</button>
					<a asp-controller="OrderDetail" asp-action="OrderDetailList" class="btn btn-secondary">Cancel</a>
				</div>
			</div>
		</form><!-- End Horizontal Form -->
	</div>
</div>