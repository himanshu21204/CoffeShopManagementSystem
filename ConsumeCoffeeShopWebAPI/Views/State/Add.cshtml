@model StateModel

<h2>Insert State</h2>

<form asp-controller="State" asp-action="Save" method="post">
    <!-- Hidden Field for StateID -->
    <input type="hidden" asp-for="StateID" />

    <div class="mb-3">
        <label asp-for="CountryID" class="form-label"><span class="text-danger">*</span>Country Name</label>
        <select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList, "CountryID", "CountryName"))" class="form-control" placeholder="Enter Country ID">
            <option value="" selected>Select Country</option>
        </select>
        <span class="text-danger" asp-validation-for="CountryID"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StateName" class="form-label"><span class="text-danger">*</span>State Name</label>
        <input type="text" class="form-control" asp-for="StateName" placeholder="Enter State Name"/>
        <span class="text-danger" asp-validation-for="StateName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StateCode" class="form-label"><span class="text-danger">*</span>State Code</label>
        <input type="text" class="form-control" asp-for="StateCode" placeholder="Enter State Code"/>
        <span class="text-danger" asp-validation-for="StateCode"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
